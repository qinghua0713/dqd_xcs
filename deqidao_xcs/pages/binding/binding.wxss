Page {
  background: #f6f6f6;
}

#swiper {
  height: 628rpx;
  position: relative;
}

.cp_container {
  display: flex;
  flex-direction: column;
  padding: 21rpx 57rpx 100rpx 35rpx;
}

.cp_info {
  display: flex;
  flex-direction: column;
  padding-bottom: 56rpx;
}

.cp_title {
  font-size: 35rpx;
  letter-spacing: 1rpx;
  color: #0b0b0b;
  margin-bottom: 17rpx;
}

.cp_weight {
  font-size: 17rpx;
  color: #686868;
  margin-bottom: 15rpx;
}

.cp_describe {
  font-size: 23rpx;
  color: #0b0b0b;
}

.btn_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bindding_btn, .cancel_btn {
  width: 625rpx;
  height: 104rpx;
  border-radius: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 34rpx;
  position: relative;
}

.bindding_btn text {
  font-size: 35rpx;
  letter-spacing: 1rpx;
  color: #fefefe;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.cancel_btn text {
  font-size: 35rpx;
  letter-spacing: 1rpx;
  color: #0c0c0c;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}
