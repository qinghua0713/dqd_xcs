<view class="earnings-page">
  <view class="date-choose shrink">
    <view class="data-month">{{currentDate}}</view>
    <swiper class="date-choose-swiper" indicator-dots="{{false}}" current="{{swiperCurrent}}" bindchange="dateSwiperChange">
      <block wx:for="{{dateList}}" wx:for-item="date" wx:key="date.id">
        <swiper-item class="swiper-item">
          <view class="weekday">
            <block wx:for-item="weekday" wx:for="{{dateListArray}}" wx:key="{{index}}">
              <text class="week " bindtap="clickCurrent" data-id="{{index}}" id="{{dateCurrentStr}}">
                <text >{{weekday}}</text>
              </text>
            </block>
          </view>
          <view class="dateday">
            <block wx:for="{{date.days}}" wx:for-item="day" wx:key="{{day.id}}">
              <text class="day" id="{{day.id}}" bindtap="chooseDate" data-id="{{index}}">
                <text class="{{dateCurrentStr==day.id?'active current':''}}">{{day.day}}</text>
              </text>
            </block>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
