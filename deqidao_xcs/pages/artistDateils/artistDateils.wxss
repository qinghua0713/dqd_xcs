.artist_container {
  display: flex;
  flex-direction: column;
  margin-top: 14rpx;
  padding: 20rpx 0rpx;
  background: #fff;
}

.artist_info {
  display: flex;
  padding: 0 30rpx;
}

.right_js {
  width: calc(100% - 278rpx);
  display: flex;
  flex-direction: column;
}

.artist_info image {
  width: 278rpx;
  height: 348rpx;
  margin-right: 10rpx;

}

.artist_info .right_title {
  font-size: 35rpx;
  letter-spacing: 1rpx;
  color: #0b0b0b;
  font-weight: bold;
  padding-bottom: 20rpx;
}

.right_js>text:not(:first-child) {
  font-size: 23rpx;
  color: #b4b2b3;
  line-height: 1.6;
}

.hisWorks_container {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  padding-bottom: 12rpx;
}

.Works_title {
  height: 82rpx;
  font-size: 29rpx;
  letter-spacing: 1rpx;
  color: #0b0b0b;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.Works_info {
  padding: 0 34rpx;
  clear: both;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.works_item {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}
.works_item:nth-child(2n+1){
  padding-right: 17rpx;
}
.works_item:nth-child(2n+2){
    padding-left: 17rpx;
}
.works_item image {
  width: 324rpx;
  height: 243rpx;
}

.bottom_content {
	width: 324rpx;
  display: flex;
  flex-direction: column;
  padding: 6rpx;
  background: #fff;
  box-sizing: border-box;
}

.art_name {
  width: 100%;
  font-size: 17rpx;
  color: #29292a;
  padding-bottom: 24rpx;
  display: flex;
}

.price_info {
  display: flex;
  justify-content: space-between;
  font-size: 17rpx;
  color: #29292a;
}

.information {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 130rpx 30rpx;
}

.information_title {
  font-size: 29rpx;
  letter-spacing: 1rpx;
  color: #0b0b0b;
  padding-bottom: 24rpx ;
}

.information_item {
  height: 139rpx;
  background-color: #090909;
  border-radius: 6rpx;
  margin-bottom: 14rpx;
}
