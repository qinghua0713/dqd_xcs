Page {
  background: #f6f6f6;
}

.redact_address_cont {
  display: flex;
  flex-direction: column;
  /* background: #f6f6f6; */
}

.redact_title {
  height: 69rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  padding: 0 40rpx;
  font-size: 35rpx;
  color: #020202;
}
.saveAddress{
  color: #fe8c5a;
  font-size: 20rpx;
}
.redact_input {
  display: flex;
  flex-direction: column;
}

.redact_user_name,
.redace_user_tel {
  height: 97rpx;
  background-color: #ffffff;
  padding-left: 37rpx;
  display: flex;
  align-items: center;
  font-size: 29rpx;
  letter-spacing: 1rpx;
  color: #020202;
  margin-bottom: 4rpx;
}

.address_container {
  height: 208rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 36rpx;
  margin-bottom: 4rpx;
  position: relative;
}

.left_address {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 29rpx;
	letter-spacing: 1rpx;
  color: #020202;
  position: absolute;
  z-index: 100;
}

.right_select {
  font-size: 17rpx;
  color: #020202;
  display: flex;
  align-items: center;
  position: absolute;
  right: 36rpx;
}

.right_select image {
  width: 9rpx;
  height: 17rpx;
  margin-left: 7rpx;
}
.dateils_address{
  height: 139rpx;
  background-color: #ffffff;
  padding: 13rpx 38rpx;
}

.dateils_address input{
  font-size: 29rpx;
  letter-spacing: 1rpx;
  color: #020202;
}
.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  background: rgba(0, 0, 0, .2);
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0rpx;
  height: 40vh;
}
.btn {
  width: 100%;
  height: 90rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  line-height: 90rpx;
  text-align: center;
  display: flex;
  background: rgba(255,255,255,.8);
  justify-content: space-between;
}
.cont {
  width: 100%;
  height: 389rpx;
}
.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}
.address {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-bottom: 1rpx solid #f1f1f1;
}