.current_tab {
  color: #e51419 !important;
  /* border-bottom: 1rpx solid #e51419; */
}

view {
  box-sizing: border-box;
  overflow-wrap: break-word;
} 

.ordered {
  color: #e51419 !important;
}

.not_order {
  color: #37e514 !important;
}

.current::after {
  content: '';
  height: 1rpx;
  width: 60%;
  position: absolute;
  bottom: 0rpx;
  left: 0;
  right: 0;
  margin: auto;
  background-color: #e51419;
}

.cover_container {
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 500;
  /* padding: 67rpx 0; */
  overflow: scroll;
}


.video_container {
  width: 100%;
  height: 417rpx;
  position: relative;

}

#myVideo {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.cover_img {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0rpx;
  box-sizing: border-box;
}

.play_btn {
  width: 126rpx;
  height: 126rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

Page {
  box-sizing: border-box;

}

.swiperContainer {
  position: relative;
}

swiper {
  height: 100%;
}

image {
  width: 100%;
  height: 100%;
}

.imageCount {
  width: 120rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 40rpx;
  line-height: 50rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  left: 13px;
  bottom: 20rpx;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 21rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 6rpx;
  width: 30rpx;
  height: 3rpx;
  background-color: #898989;
  /* transition: all 0.6s; */
}

.dots .dot.active {
  background: #dcdcdc;
}

.return_container {
  position: fixed;
  bottom: 120rpx;
  right: 35rpx;
}

.return_home,
.return_top {
  width: 83rpx;
  height: 83rpx;
  background-color: #ffffff;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0rpx 1rpx 10rpx;
  margin-bottom: 20rpx;
}

.return_home image {
  width: 45rpx;
  height: 47rpx;
}

.return_top image {
  width: 42rpx;
  height: 54rpx;
}

button {
  width: auto !important;
  line-height: normal !important;
  border-radius: 0 !important;
  font-weight: normal !important;
  padding: 0 !important;
  min-height: 0 !important;
  background: none;
  overflow: visible !important;

}

button::after {
  border: none !important;
}

.no-production {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b4b2b3;
}

.No-message {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b4b2b3;
}

.information {
  min-height: 473rpx;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 130rpx 30rpx;
}

/* 返回个人中心按钮 */
.return_my_btn {
  width: 100%;
  height: 81rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  background: #fbfbfb;
  font-size: 29rpx;
  color: #e51419;
}

.return_my_btn image {
  width: 44rpx;
  height: 46rpx;
  margin-right: 21rpx;

}

/* 广播提示样式 */
.broadcast {
  background: rgb(199, 199, 67);
  position: fixed;
  top: 20rpx;
  left: 5%;
  right: 5%;
   height: 80rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 40rpx;
  padding: 10rpx 20rpx;
  font-size: 22rpx;
z-index: 100;
border-radius: 6rpx;
font-size: 24rpx;
}