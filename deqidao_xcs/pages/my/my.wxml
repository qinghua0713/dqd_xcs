<view class="my-page">
  <!-- 用户头像 -->
  <view class="my_info">
    <image class="my_portrait" src="/assets/image/logo.png" />
  </view>
  <!-- 用户详情 -->
  <view class="list_cont">
    <view class="list_item">
      <text>用户昵称</text>
      <text>ID：12345678</text>
    </view>
    <view class="list_item balance_info">
      <image class="balance" src="/assets/image/balance.png" />
      <text>余  额</text>
      <text>￥ 9999</text>
    </view>
    <view class="list_item">
      <image class="collect" src="/assets/image/collect.png" />
      <text>收藏</text>
    </view>
    <view class="list_item">
      <image class="footprint" src="/assets/image/footprint.png" />
      <text>足迹</text>
    </view>
  </view>
  <!-- 艺术品列表 -->
  <view class="ysp_earnings">
    <view class="ys_title">
      <text>艺术品收益</text>
    </view>
    <view class="ysp_container">
      <view class="ys_item" wx:if="{{!yspIsNo}}">
        <view class="left_info">
          <image src="/assets/image/earnings2.png" />
          <view class="shop_ms">
            <text class="ysp_name">青花瓷圆口瓶</text>
            <text class="cp_maoshu">景德镇</text>
            <text class="price">价值</text>
          </view>
        </view>
        <view class="right_progress">
          <view class="progress_title">各阶段进展</view>
          <view class="jd_progress">
            <view class="jd_item">
              <view class="circle circleDot gq_dot"></view>
              <text>锁定期</text>
            </view>
            <view class="progress pgs_1 current_pro"></view>
            <view class="jd_item">
              <image src="/assets/image/hongqi.png" />
              <text class="circle circleDot current_dot"></text>
              <text>收益期</text>
            </view>
            <view class="progress pgs_2"></view>
            <view class="jd_item">
              <text class="circle circleDot"></text>
              <text>兑现期</text>
            </view>
          </view>
          <view class="view_dateils">查看详情</view>
        </view>
      </view>
      <view class="No-ysp" wx:if="{{yspIsNo}}">
        <image src="/assets/image/empty.png" />
        <view class="ts_title">您的宝箱还没有艺术品呢~</view>
        <text class="biaoyu-text">艺术，也是一种有效的投资手段</text>
        <view class="lk_btn">
           <view class="btn_item" bindtap="goToDateils">
             <text >去发现</text>
             <text >赶快去艺术档案看看</text>
           </view>
           <view class="btn_item" bindtap="scanMa">
             <text >扫一扫</text>
             <text >已签约订购，扫码绑定</text>
           </view>
        </view>
      </view>
    </view>
    <view class="more">更多藏品收益...</view>
  </view>
  <!-- 订单信息 -->
  <view class="order_cont">
    <view class="order_title">
      <text>全部订单</text>
    </view>
    <view class="order_list">
      <view class="order_item">
        <image class="guanli" src="/assets/image/guanli.png" />
        <text>艺术品管理</text>
      </view>
      <view class="order_item">
        <image class="mail" src="/assets/image/mail.png" />
        <text>艺术品寄售</text>
      </view>
      <view class="order_item">
        <image class="service" src="/assets/image/service.png" />
        <text>客服中心</text>
      </view>
    </view>
  </view>
  <!-- 基本信息 -->
  <view class="message_manage">
    <view class="message_item">基本信息</view>
    <view class="message_item">地址管理</view>
    <view class="message_item">ACS合同条约</view>
  </view>
</view>