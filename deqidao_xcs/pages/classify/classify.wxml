                    </view>
                </view>
            </view>
        </view>
    </view>
    <!-- 回到顶部与首页 -->
    <view class="return_container" hidden="{{!showTop}}">
        <view class="return_home" bindtap="returnHome">
            <image src="/assets/image/return_home.png" />
        </view>
        <view class="return_top" bindtap="goTop">
            <image src="/assets/image/go_top.png" />
        </view>
    </view>
</view>
