<view class="binding-page">
<view class="swiperContainer">
  <swiper bindchange="swiperChange"    autoplay="{{true}}"  duration="{{500}}" 
  circular style='height: 625rpx;'>
    <block wx:for="{{imgUrl}}" wx:key="*this">
      <swiper-item wx:key="*this">
        <image src="{{item}}" class="slide-image"  class='img'  />
      </swiper-item>
    </block>
  </swiper>
  <view class="dots">
    <block wx:for="{{imgUrl}}" wx:key="*">
      <view class="dot{{index == current ? ' active' : ''}}"></view>
    </block>
  </view>  
</view>

  <view class="cp_container">
    <view class="cp_info">
      <text class="cp_title">藏品名称</text>
      <view class="cp_weight">
        <text decode="{{true}}">长&nbsp;20cm&nbsp;&nbsp;&nbsp;宽&nbsp;40cm&nbsp;&nbsp;&nbsp;高60cm</text>
      </view>
      <text class="cp_describe">艺术品描述艺术品描述艺术品描述艺术品描述艺术品描述艺术品描述艺术品描述艺术品描述艺术品描述</text>
    </view>
    <view class="btn_container">
      <view class="bindding_btn">
        <image src="/assets/image/rz_binding.png" />
        <text>认证绑定</text>
      </view>
      <view class="cancel_btn">
        <image src="/assets/image/cancel.png" />
        <text>取 消</text>
      </view>

    </view>
  </view>
</view>