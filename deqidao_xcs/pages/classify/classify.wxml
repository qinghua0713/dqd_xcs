<view class="tunnel_page">
    <!-- 轮播图 -->
    <view class="swiperContainer">
        <swiper bindchange="swiperChange" autoplay="{{true}}" duration="{{500}}" circular style='height: 347rpx;'>
            <block wx:for="{{imgUrl}}" wx:key="{{index}}">
                <swiper-item wx:key="{{index}}">
                    <image src="{{item}}" class="slide-image" class='img' />
                </swiper-item>
            </block>
        </swiper>
        <view class="dots">
            <block wx:for="{{imgUrl}}" wx:key="{{index}}">
                <view class="dot{{index == current ? ' active' : ''}}"></view>
            </block>
        </view>
    </view>
    <!-- 臻品推荐列表 -->
    <view class="zp_tuijian">
        <view class="zp_title">
            <view class="xl_container">
                <view class="xl_info" bindtap="optionValue">
                    <view class="value_item">
                        <text>{{value}}</text>
                    </view>
                    <view class="xl_img_btn">
                        <image src="/assets/image/d_sanjiao.png" />
                    </view>
                </view>
                <view class="xl_option" wx:if="{{showValue}}">
                    <block wx:for="{{val}}" wx:key="{{index}}">
                        <view class="options_item" data-index="{{index}}" bindtap="selectCentre" 
                        data-item="{{item}}" wx:if="{{valIndex != index }}">
                            {{item}}
                        </view>
                    </block>
                </view>
            </view>
            <view class="filtrate_btn" bind:tap="showCover">
                <text>筛选</text>
                <image class="filtrate_img" src="/assets/image/filtrate.png" />
            </view>
        </view>
        <view class="zp_list">
            <view class="tj_item">
                <image src="/assets/image/yishuti_1.png" />
                <view class="ysp_info">
                    <text class="ysp_name">艺术品名称</text>
                    <view class="price_cont">
                        <text class="price">价值</text>
                        <text class="ordered">待订购</text>
                    </view>
                </view>
            </view>
            <view class="tj_item">
                <image src="/assets/image/yishuti_2.png" />
                <view class="ysp_info">
                    <text class="ysp_name">艺术品名称</text>
                    <view class="price_cont">
                        <text class="price">价值</text>
                        <text class="ordered">待订购</text>
                    </view>
                </view>
            </view>
            <view class="tj_item">
                <image src="/assets/image/yishuti_3.png" />
                <view class="ysp_info">
                    <text class="ysp_name">艺术品名称</text>
                    <view class="price_cont">
                        <text class="price">价值</text>
                        <text class="ordered">待订购</text>
                    </view>
                </view>
            </view>
            <view class="tj_item">
                <image src="/assets/image/yishuti_4.png" />
                <view class="ysp_info">
                    <text class="ysp_name">艺术品名称</text>
                    <view class="price_cont">
                        <text class="price">价值</text>
                        <text class="ordered">待订购</text>
                    </view>
                </view>
            </view>
            <view class="tj_item">
                <image src="/assets/image/yishuti_5.png" />
